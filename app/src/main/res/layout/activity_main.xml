<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingTop="60dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_settings"
        android:tint="@color/white"
        android:layout_gravity="start" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:inputType="number"
        android:textColor="@color/white"
        android:textSize="@dimen/_30ssp"
        tools:text="33400" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:columnCount="4">

        <Button
            android:id="@+id/key_percent"
            style="@style/CalcButtons"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/orange_button"
            android:text="@string/key_percent" />

        <Button
            android:id="@+id/key_multipl"
            style="@style/CalcButtons"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/orange_button"
            android:text="@string/key_multipl" />

        <Button
            android:id="@+id/key_divide"
            style="@style/CalcButtons"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/orange_button"
            android:text="@string/key_divide" />

        <Button
            android:id="@+id/key_delete"
            style="@style/CalcButtons"
            android:backgroundTint="@color/orange_button"
            android:text="@string/key_delete" />

        <Button
            android:id="@+id/key_7"
            style="@style/CalcButtons"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/gray_button"
            android:text="@string/key_7" />

        <Button
            android:id="@+id/key_8"
            style="@style/CalcButtons"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/gray_button"
            android:text="@string/key_8" />

        <Button
            android:id="@+id/key_9"
            style="@style/CalcButtons"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/gray_button"
            android:text="@string/key_9" />

        <Button
            android:id="@+id/key_plus"
            style="@style/CalcButtons"
            android:backgroundTint="@color/orange_button"
            android:text="@string/key_plus" />

        <Button
            android:id="@+id/key_6"
            style="@style/CalcButtons"
            android:layout_column="2"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/gray_button"
            android:text="@string/key_6" />

        <Button
            android:id="@+id/key_minus"
            style="@style/CalcButtons"
            android:backgroundTint="@color/orange_button"
            android:text="@string/key_minus" />

        <Button
            android:id="@+id/key_5"
            style="@style/CalcButtons"
            android:layout_column="1"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/gray_button"
            android:text="@string/key_5" />

        <Button
            android:id="@+id/key_4"
            style="@style/CalcButtons"
            android:layout_column="0"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/gray_button"
            android:text="@string/key_4" />

        <Button
            android:id="@+id/key_3"
            style="@style/CalcButtons"
            android:layout_column="2"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/gray_button"
            android:text="@string/key_3" />

        <Button
            android:id="@+id/key_2"
            style="@style/CalcButtons"
            android:layout_column="1"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/gray_button"
            android:text="@string/key_2" />

        <Button
            android:id="@+id/key_1"
            style="@style/CalcButtons"
            android:layout_column="0"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/gray_button"
            android:text="@string/key_1" />

        <Button
            android:id="@+id/key_0"
            style="@style/CalcButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/gray_button"
            android:text="@string/key_0"
            android:textSize="@dimen/_20ssp" />

        <Button
            android:id="@+id/key_point"
            style="@style/CalcButtons"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/gray_button"
            android:text="@string/key_point" />

        <Button
            android:id="@+id/key_equals"
            style="@style/CalcButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@color/orange_button"
            android:text="@string/key_equals"
            android:textSize="@dimen/_20ssp" />

    </GridLayout>

</LinearLayout>